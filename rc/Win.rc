#include <windows.h>
#include "../src/Version.h"

MAIN_ICON ICON "icon.ico"
MUSIC_ICON ICON "music.ico"
PLAYLIST_ICON ICON "playlist.ico"

1 VERSIONINFO
 FILEVERSION PRODUCT_VERSION
 PRODUCTVERSION PRODUCT_VERSION
 FILEFLAGSMASK 0x3fL
#ifdef _DEBUG
 FILEFLAGS 0x1L
#else
 FILEFLAGS 0x0L
#endif
 FILEOS VOS__WINDOWS32
 FILETYPE VFT_APP
 FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"
        BEGIN
			VALUE "CompanyName",       "Fábio Pichler"
            VALUE "FileDescription",   "Omicron Player Classic"
            VALUE "FileVersion",       FILE_VERSION
            VALUE "InternalName",      ORIGINAL_FILENAME
            VALUE "LegalCopyright",    "Copyright © 2015-2019, Fábio Pichler"
            VALUE "OriginalFilename",  ORIGINAL_FILENAME ".exe"
            VALUE "ProductName",       "Omicron Player Classic"
            VALUE "ProductVersion",    PRODUCT_VERSION_STR
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0416, 1200
    END
END
